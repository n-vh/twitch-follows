{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ES2020",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/lib/*"]
    },
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "sourceMap": true
  }
}
